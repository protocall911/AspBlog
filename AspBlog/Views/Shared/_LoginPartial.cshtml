@using Microsoft.AspNetCore.Identity
@using AspBlog.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
             <a class="nav-link px-lg-3 py-3 py-lg-4" asp-controller="Admin" asp-action="Index">Hello @((await UserManager.GetUserAsync(User)).FirstName)!  </a>  
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                <button type="submit" style="font-size: 0.75rem;
                                                 font-weight: 800;
                                                 letter-spacing: 0.0625em;
                                                 text-transform: uppercase;
                                                 color: #f9fafb;" class="nav-link px-lg-3 py-3 py-lg-4 btn btn-link ">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link px-lg-3 py-3 py-lg-4" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }


